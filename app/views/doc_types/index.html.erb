<p id="notice"><%= notice %></p>

<h1>Doc Types</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Shortname</th>
      <th>Template</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doc_types.each do |doc_type| %>
      <tr>
        <td><%= doc_type.title %></td>
        <td><%= doc_type.shortname %></td>
        <td><%= doc_type.template.name %></td>
        <td><%= link_to 'Show', doc_type %></td>
        <td><%= link_to 'Edit', edit_doc_type_path(doc_type) %></td>
        <td><%= link_to 'Destroy', doc_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

