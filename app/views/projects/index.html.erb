<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Number</th>
			<th>Customer</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @projects.each do |project| %>
		<tr>
			<td><%= project.title %></td>
			<td><%= project.number %></td>
			<td><%= project.customer %></td>
			<td><%= link_to 'Show', project %></td>
			<td><%= link_to 'Edit', edit_project_path(project) %></td>
			<td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<tr><td><h2>Doc Types</h2></td><td colspan="5"></td></tr>
		<div id="projectdocs">
			<% project.doc_types.each do |doc_type|%>
			<%= render partial: "doc_types/doc_type", locals: {doc_type: doc_type, project: project } %>
			<% end %>
		</div>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
